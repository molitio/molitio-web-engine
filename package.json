{
    "name": "@molitio/web-engine",
    "private": true,
    "packageManager": "yarn@4.9.2",
    "version": "0.2.0",
    "authors": "Peter Koller",
    "description": "Molitio Core Libraries",
    "scripts": {
        "ci": "yarn install --immutable --immutable-cache --check-cache",
        "build": "yarn artifacts:cleanup && yarn workspaces foreach --all --topological-dev run build",
        "build-mwe-ui-core": "yarn artifacts:cleanup && yarn workspace @molitio/mwe-ui-core build",
        "build-resource-hub": "yarn workspace @molitio/mwe-resource-hub-api build",
        "build-john-glenn-ui": "yarn artifacts:cleanup && yarn workspace @molitio/mwe-ui-core build && yarn workspace @molitio/mwe-john-glenn-ui build",
        "build-sleeping-dragon-ui": "yarn artifacts:cleanup && yarn workspace @molitio/mwe-ui-core build && yarn workspace @molitio/mwe-sleeping-dragon-ui build",
        "artifacts:cleanup": "rimraf .artifacts && mkdir .artifacts",
        "dev": "WATCHPACK_POLLING=true yarn workspace @molitio/mwe-sleeping-dragon-ui dev & WATCHPACK_POLLING=true yarn workspace @molitio/mwe-john-glenn-ui dev",
        "lint": "yarn prettier . --write",
        "test": "yarn jest",
        "test:watch": "yarn jest --watch",
        "test:generate-output": "yarn jest --json --outputFile=.artifacts/test-results/jest-test-results.json",
        "installPeerDeps": "yarn check-peer-dependencies --install",
        "ts": "tsc --traceResolution --listFilesOnly",
        "docs:build": "yarn workspace @molitio/mwe-docs build && yarn workspace @molitio/mwe-resource-hub-api docs",
        "docs:serve": "yarn workspace @molitio/mwe-docs start",
        "yarn:config": "yarn config",
        "bootstrap": "yarn dlx @yarnpkg/sdks",
        "publish-mwe-ui-core": "yarn workspace @molitio/mwe-ui-core publish-mwe-ui-core",
        "codegen": "graphql-codegen --config codegen.ts",
        "container-compose": "docker compose -f docker-compose.yml up -d --build",
        "container-rebuild": "docker compose down --remove-orphans && docker system prune -af && docker compose -f docker-compose.yml up -d --build --force-recreate"
    },
    "workspaces": [
        "apps-ui/*",
        "apps-api/*",
        "packages-ui/*",
        "packages-api/*",
        "molitio-wiki/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "eslint '*/**/*.{js,ts,tsx, css, scss}' --quiet --fix"
        }
    },
    "size-limit": [
        {
            "path": "./packages/mwe-ui-core/index.js",
            "limit": "500 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "7.24.3",
        "@babel/eslint-parser": "7.28.4",
        "@compodoc/compodoc": "1.1.26",
        "@graphql-codegen/cli": "5.0.2",
        "@graphql-codegen/client-preset": "4.2.6",
        "@graphql-codegen/introspection": "4.0.3",
        "@graphql-codegen/typescript": "4.0.7",
        "@graphql-codegen/typescript-operations": "4.2.1",
        "@graphql-codegen/typescript-react-apollo": "4.3.0",
        "@graphql-codegen/typescript-react-query": "6.1.0",
        "@parcel/watcher": "2.4.1",
        "@tailwindcss/typography": "0.5.15",
        "@types/jest": "29.5.4",
        "@types/node": "20.12.7",
        "@types/ws": "8.5.10",
        "@typescript-eslint/eslint-plugin": "8.46.0",
        "@typescript-eslint/parser": "8.46.0",
        "autoprefixer": "10.4.16",
        "babel-jest": "29.7.0",
        "core-js": "3.30.2",
        "eslint": "9.37.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-react": "7.37.2",
        "eslint-plugin-react-hooks": "5.1.0",
        "eslint-plugin-tsdoc": "0.2.17",
        "graphql": "16.8.1",
        "graphql-tag": "2.12.6",
        "jest": "29.6.4",
        "jest-environment-jsdom": "29.6.4",
        "postcss": "8.4.36",
        "prettier": "3.0.3",
        "prettier-eslint": "16.3.0",
        "protobufjs": "7.4.0",
        "rimraf": "5.0.5",
        "tailwindcss": "3.4.3",
        "ts-jest": "29.1.1",
        "ts-morph": "22.0.0",
        "ts-node": "10.9.2",
        "tslib": "2.6.2",
        "typedoc": "0.25.0",
        "typescript": "5.2.2"
    },
    "resolutions": {
        "@molitio/mwe-ui-core": "workspace:0.2.0"
    },
    "dependenciesMeta": {
        "autoprefixer@10.4.16": {
            "unplugged": true
        },
        "postcss@8.4.36": {
            "unplugged": true
        },
        "tailwindcss@3.4.3": {
            "unplugged": true
        },
        "ts-node@10.9.2": {
            "unplugged": true
        }
    },
    "dependencies": {
        "@yarnpkg/sdks": "3.2.3"
    }
}
