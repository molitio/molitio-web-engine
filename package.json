{
    "name": "@molitio/web-engine",
    "private": true,
    "type": "module",
    "packageManager": "yarn@4.1.1",
    "version": "1.0.3-0",
    "authors": "Peter Koller",
    "description": "Molitio Core Libraries",
    "scripts": {
        "i": "yarn workspaces foreach --all --parallel --interlaced --topological install",
        "ci:install": "yarn workspaces foreach --all --interlaced --topological install --immutable",
        "build": "yarn artifacts:cleanup && yarn workspaces foreach --all --topological run build",
        "artifacts:cleanup": "rimraf .artifacts && mkdir .artifacts",
        "dev": "yarn workspaces foreach --all --interlaced --topological dev",
        "lint": "yarn prettier . --write",
        "test": "yarn jest",
        "test:watch": "yarn jest --watch",
        "test:generate-output": "yarn jest --json --outputFile=.artifacts/test-results/jest-test-results.json",
        "installPeerDeps": "yarn check-peer-dependencies --install",
        "ts": "tsc --traceResolution --listFilesOnly",
        "docgen-show-config": "yarn typedoc --showConfig",
        "docgen": "yarn run typedoc --options typedoc.json",
        "yarn:config": "yarn config",
        "bootstrap": "yarn dlx @yarnpkg/sdks",
        "publish-ui-core": "yarn build-ui-core && yarn workspace @molitio/ui-core publish-ui-core"
    },
    "workspaces": [
        "packages/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "eslint '*/**/*.{js,ts,tsx, css, scss}' --quiet --fix"
        }
    },
    "size-limit": [
        {
            "path": "./packages/ui-core/index.js",
            "limit": "500 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "7.24.3",
        "@types/jest": "29.5.4",
        "@types/node": "18.11.9",
        "@types/react": "18.2.21",
        "@types/react-dom": "18.2.7",
        "@typescript-eslint/eslint-plugin": "6.5.0",
        "@typescript-eslint/parser": "6.5.0",
        "babel-jest": "29.7.0",
        "eslint": "8.28.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-tsdoc": "0.2.17",
        "jest": "29.6.4",
        "jest-environment-jsdom": "29.6.4",
        "next": "14.1.3",
        "prettier": "3.0.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rimraf": "5.0.5",
        "ts-jest": "29.1.1",
        "tslib": "2.6.2",
        "typedoc": "0.25.0",
        "typescript": "5.2.2"
    },
    "stableVersion": "1.0.2",
    "dependenciesMeta": {
        "prettier@3.0.3": {
            "unplugged": true
        }
    }
}
