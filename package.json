{
    "name": "@molitio/web-engine",
    "private": true,
    "packageManager": "yarn@4.1.1",
    "type": "module",
    "version": "1.0.3-0",
    "authors": "Peter Koller",
    "description": "Molitio Core Libraries",
    "scripts": {
        "i": "yarn workspaces foreach --all install",
        "ci:install": "yarn workspaces foreach --all install --immutable",
        "build": "yarn artifacts:cleanup && yarn workspaces foreach --all run build",
        "artifacts:cleanup": "rimraf .artifacts && mkdir .artifacts",
        "dev": "yarn build:watch & yarn workspace @molitio/john-glenn dev",
        "build:watch": "yarn rollup -c -w",
        "lint": "yarn prettier . --write",
        "test": "yarn jest",
        "test:watch": "yarn jest --watch",
        "test:generate-output": "yarn jest --json --outputFile=.artifacts/test-results/jest-test-results.json",
        "installPeerDeps": "yarn check-peer-dependencies --install",
        "ts": "tsc --traceResolution --listFilesOnly",
        "docgen-show-config": "yarn typedoc --showConfig",
        "predocgen": "rm -rf docs && mkdir -p docs",
        "docgen": "yarn run typedoc --options typedoc.json",
        "yarn:config": "yarn config",
        "bootstrap": "yarn dlx @yarnpkg/sdks",
        "publish-ui-core": "yarn build-ui-core && yarn workspace @molitio/ui-core publish-ui-core"
    },
    "workspaces": [
        "packages/*"
    ],
    "moduleDefinitions": {
        "ui-core": {
            "name": "ui-core",
            "basePath": "./packages/ui-core",
            "inputPath": "src/index.ts",
            "outDir": ".artifacts/ui-core",
            "module": "dist/esm/index.js",
            "bundle": {
                "esm": "dist/bundle/esm/index.js",
                "umd": "dist/bundle/umd/index.js"
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint '*/**/*.{js,ts,tsx, css, scss}' --quiet --fix"
        }
    },
    "size-limit": [
        {
            "path": "./packages/ui-core/index.js",
            "limit": "500 KB"
        }
    ],
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "@babel/core": "^7.22.17",
        "@babel/eslint-parser": "^7.18.9",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
        "@babel/plugin-syntax-jsx": "^7.22.5",
        "@babel/plugin-transform-typescript": "^7.18.12",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^25.0.5",
        "@rollup/plugin-image": "^3.0.3",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/jest": "^29.5.4",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "fast-glob": "^3.2.12",
        "jest": "^29.6.4",
        "jest-environment-jsdom": "^29.6.4",
        "prettier": "^3.0.3",
        "rimraf": "5.0.5",
        "rollup": "4.0.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-pnp-resolve": "^2.0.0",
        "rollup-plugin-size": "^0.2.2",
        "rollup-plugin-visualizer": "^5.9.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.2",
        "typedoc": "^0.25.0",
        "typescript": "^5.2.2"
    },
    "stableVersion": "1.0.2",
    "dependenciesMeta": {
        "prettier@3.0.3": {
            "unplugged": true
        }
    }
}
