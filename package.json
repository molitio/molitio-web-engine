{
    "name": "@molitio/web-engine",
    "private": true,
    "packageManager": "yarn@4.1.0",
    "type": "module",
    "version": "1.0.3-0",
    "authors": "Peter Koller",
    "description": "Molitio Core Libraries",
    "scripts": {
        "lint": "yarn prettier . --write",
        "dev-sb": "yarn build:watch & yarn storybook",
        "dev": "yarn build:watch & yarn workspace @molitio/john-glenn dev",
        "build": "yarn build-ui-core && yarn build-john-glenn",
        "build-system-schema": "yarn workspace @molitio/system-schema build",
        "build-ui-core": "yarn workspace @molitio/ui-core clean && yarn rollup -c",
        "build-john-glenn": "yarn workspace @molitio/john-glenn clean && yarn workspace @molitio/john-glenn build",
        "build:ui-storybook": "yarn workspace @molitio/ui-storybook build",
        "build:watch": "yarn rollup -c -w",
        "publish-ui-core": "yarn build-ui-core && yarn workspace @molitio/ui-core publish-ui-core",
        "test": "cross-env DEBUG_PRINT_LIMIT=10000 yarn jest",
        "test:watch": "cross-env DEBUG=namespace yarn jest --watch",
        "test:generate-output": "yarn jest --json --outputFile=.jest-test-results.json",
        "installPeerDeps": "yarn check-peer-dependencies --install",
        "ts": "tsc --traceResolution --listFilesOnly",
        "docgen-show-config": "yarn typedoc --showConfig",
        "predocgen": "rm -rf docs && mkdir -p docs",
        "docgen": "yarn run typedoc --options typedoc.json",
        "bootstrap": "yarn dlx @yarnpkg/sdks"
    },
    "workspaces": [
        "packages/ui-core",
        "packages/john-glenn",
        "packages/ui-core-tests"
    ],
    "resolutions": {
        "@molitio/*": "workspace:packages/*"
    },
    "moduleDefinitions": {
        "ui-core": {
            "name": "ui-core",
            "basePath": "./packages/ui-core",
            "outDir": "dist",
            "baseUrl": "src",
            "inputPath": "src/index.ts",
            "main": "dist/index.js",
            "module": "dist/esm/index.js",
            "tsConfigPath": "tsconfig.json",
            "declarationDir": "dist",
            "bundle": {
                "esm": "dist/bundle/esm/index.js",
                "umd": "dist/bundle/umd/index.js"
            }
        }
    },
    "size-limit": [
        {
            "path": "./packages/system-schema/dist/index.js",
            "limit": "10 KB"
        },
        {
            "path": "./packages/ui-core/dist/index.js",
            "limit": "10 KB"
        },
        {
            "path": "./packages/ui-storybook/dist/index.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "@babel/core": "^7.22.17",
        "@babel/eslint-parser": "^7.18.9",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
        "@babel/plugin-syntax-jsx": "^7.22.5",
        "@babel/plugin-transform-typescript": "^7.18.12",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-buble": "^1.0.3",
        "@rollup/plugin-commonjs": "^25.0.5",
        "@rollup/plugin-image": "^3.0.3",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/buble": "^0.20.1",
        "@types/jest": "^29.5.4",
        "@types/node": "^18.11.9",
        "@types/react": "18.2.21",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "@vercel/build-utils": "^7.2.2",
        "babel-jest": "^29.7.0",
        "babel-plugin-styled-components": "^2.1.4",
        "buble": "^0.20.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "fast-glob": "^3.2.12",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.6.4",
        "jest-environment-jsdom": "^29.6.4",
        "next": "^13.4.19",
        "prettier": "^3.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rollup": "4.0.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-pnp-resolve": "^2.0.0",
        "rollup-plugin-preserve-directives": "^0.2.0",
        "rollup-plugin-size": "^0.2.2",
        "rollup-plugin-visualizer": "^5.9.2",
        "styled-components": "6.0.8",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.2",
        "typedoc": "^0.25.0",
        "typescript": "^5.2.2",
        "vercel": "^32.2.1"
    },
    "stableVersion": "1.0.2",
    "dependenciesMeta": {
        "prettier@3.0.3": {
            "unplugged": true
        }
    }
}
