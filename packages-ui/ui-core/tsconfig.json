{
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2022",
        "module": "es2022",
        "resolveJsonModule": true,
        "jsx": "react",
        "baseUrl": "./src",
        "declarationDir": "./dist/declarations",
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true
    }
}
