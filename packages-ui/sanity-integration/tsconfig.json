{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "Preserve",
        "moduleDetection": "force",
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "sanity.config.ts"],
    "exclude": ["node_modules"]
}
