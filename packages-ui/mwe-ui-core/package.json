{
    "name": "@molitio/mwe-ui-core",
    "version": "0.2.0",
    "author": "Peter Koller",
    "description": "Re-usable React UI Components",
    "license": "MIT",
    "type": "module",
    "main": "src/index.ts",
    "repository": "git+https://github.com/molitio/molitio-web-engine.git",
    "keywords": [
        "molitio",
        "mwe-ui-core"
    ],
    "bugs": {
        "url": "https://github.com/molitio/molitio-web-engine/issues",
        "email": "info@molitio.com"
    },
    "homepage": "https://github.com/molitio/molitio-web-engine#readme",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "yarn build:watch",
        "build": "rm -rf ./dist && yarn package:builder && yarn rollup -c",
        "build:watch": "rm -rf ./dist && yarn package:builder && yarn rollup -c -w",
        "package:builder": "node ./package-builder/package-builder.js",
        "publish-mwe-ui-core": "yarn build && cd dist && npm publish --access=public --auth-type=legacy && cd ..",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "lint-fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
        "create-artifacts": "mkdir -p ../../.artifacts/mwe-ui-core/ && npm pack --pack-destination ../../.artifacts/mwe-ui-core/"
    },
    "peerDependencies": {
        "formik": "2.4.6",
        "jotai": "2.15.1",
        "next": "15.3.4",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "tailwindcss": " 4.1.16",
        "yup": "1.5.0"
    },
    "devDependencies": {
        "@babel/cli": "7.28.3",
        "@babel/core": "7.28.5",
        "@babel/eslint-parser": "7.28.5",
        "@babel/plugin-proposal-class-properties": "7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "7.20.7",
        "@babel/plugin-syntax-jsx": "7.27.1",
        "@babel/plugin-transform-typescript": "7.28.5",
        "@babel/preset-env": "7.28.5",
        "@babel/preset-react": "7.28.5",
        "@babel/preset-typescript": "7.28.5",
        "@molitio/mwe-tailwindcss-config": "workspace:0.2.0",
        "@rollup/plugin-babel": "6.1.0",
        "@rollup/plugin-commonjs": "29.0.0",
        "@rollup/plugin-image": "3.0.3",
        "@rollup/plugin-json": "6.1.0",
        "@rollup/plugin-node-resolve": "16.0.3",
        "@rollup/plugin-replace": "6.0.3",
        "@rollup/plugin-terser": "0.4.4",
        "@rollup/plugin-typescript": "12.3.0",
        "@tailwindcss/postcss": "4.1.16",
        "@tailwindcss/typography": "0.5.19",
        "@types/eslint": "9.6.1",
        "@types/grecaptcha": "3.0.9",
        "@types/node": "24.9.2",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.2",
        "@typescript-eslint/eslint-plugin": "8.46.2",
        "@typescript-eslint/parser": "8.46.2",
        "eslint": "9.39.0",
        "eslint-config-next": "16.0.1",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "fast-glob": "3.3.3",
        "formik": "2.4.6",
        "jotai": "2.15.1",
        "next": "15.3.4",
        "postcss": "8.5.6",
        "prettier": "3.6.2",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "react-i18next": "16.2.3",
        "react-is": "19.2.0",
        "rollup": "4.52.5",
        "rollup-plugin-peer-deps-external": "2.2.4",
        "rollup-plugin-postcss": "4.0.2",
        "rollup-plugin-size": "0.3.1",
        "rollup-plugin-visualizer": "6.0.5",
        "rollup-preserve-directives": "1.1.3",
        "tailwindcss": "4.1.16",
        "typescript": "5.9.3",
        "yup": "1.7.1"
    },
    "dependencies": {
        "i18next": "25.6.0",
        "react-i18next": "16.2.3"
    },
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "require": "./src/index.ts",
            "types": "./src/index.ts"
        },
        "./rsc": {
            "import": "./src/rsc.ts",
            "require": "./src/rsc.ts",
            "types": "./src/rsc.ts"
        }
    },
    "typesVersions": {
        "*": {
            "rsc": [
                "src/rsc.ts"
            ],
            "*": [
                "src/index.ts"
            ]
        }
    }
}
