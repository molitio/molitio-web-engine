{
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "**/*.tsx", "tanstack.config.cjs", "tailwind.config.cjs", "**/*.d.ts"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist",
        "target": "esnext",
        "module": "preserve",
        "moduleResolution": "bundler",
        "rootDirs": ["src"],
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationDir": "./dist/esm",
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
