{
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "**/*.tsx", "tanstack.config.ts", "tailwind.config.cjs"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "rootDirs": ["src"],
        "moduleResolution": "node",
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationDir": "./dist/esm",
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
