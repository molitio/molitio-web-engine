{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../../.artifacts/john-glenn/types/**/*.ts",
        "../../.artifacts/john-glenn/.next/types/**/*.ts",
        "../../.artifacts/john-glenn//types/**/*.ts",
        "../../packages-ui/mwe-ui-core/src/ui-nav-menu/NavBar.tsx"
    ],
    "exclude": ["node_modules"]
}
