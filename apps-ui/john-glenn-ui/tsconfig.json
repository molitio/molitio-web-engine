{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "lib": ["dom", "dom.iterable", "esnext"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        },
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.cjs"],
    "exclude": ["node_modules"]
}
