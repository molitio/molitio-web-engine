{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  /*     "typedocOptions": {
        "basePath": "packages/ui-core",
        "includes": ["packages/ui-core/src"],
        "entryPoints": ["packages/ui-core/src/index.ts"],
        "out": "docs",
        "compilerOptions": {
            "jsx": "react-jsx"
        }
    }, */
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable", "esnext", "es2020"],
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "module": "es2020",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
