{
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2022",
        "module": "es2022",
        "resolveJsonModule": true,
        "jsx": "react",
        "baseUrl": "src",
        "declarationDir": "../../.artifacts/ui-core/types",
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true
    }
}
