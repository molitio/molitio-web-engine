{
    "name": "@molitio/ui-core",
    "version": "1.0.3-0",
    "author": "Peter Koller",
    "main": "src/index.ts",
    "type": "module",
    "types": "../../.artifacts/ui-core/types/index.d.ts",
    "description": "Re-usable React UI Components",
    "license": "MIT",
    "repository": "git+https://github.com/molitio/molitio-web-engine.git",
    "keywords": [
        "molitio",
        "ui-core"
    ],
    "bugs": {
        "url": "https://github.com/molitio/molitio-web-engine/issues",
        "email": "info@molitio.com"
    },
    "homepage": "https://github.com/molitio/molitio-web-engine#readme",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "yarn build:watch",
        "build": "yarn rollup -c",
        "build:watch": "yarn rollup -c -w",
        "packageBuilder": "node packageBuilder",
        "publish-ui-core": "yarn packageBuilder && cd dist && npm publish --access=public && cd ..",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "lint-fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
        "create-artifacts": "mkdir -p ../.artifact/package && cd ui-core/ && npm pack --pack-destination ../.artifact/packages && cd ../../"
    },
    "moduleDefinitions": {
        "ui-core": {
            "name": "ui-core",
            "basePath": "./src",
            "inputPath": "index.ts",
            "outDir": "../../.artifacts/ui-core",
            "module": "../../.artifacts/ui-core/esm/index.js",
            "bundle": {
                "esm": "../../.artifacts/ui-core/bundle/esm/index.js",
                "umd": "../../.artifacts/ui-core//bundle/umd/index.js"
            }
        }
    },
    "peerDependencies": {
        "next": "14.1.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-is": "18.2.0"
    },
    "devDependencies": {
        "@babel/cli": "7.18.10",
        "@babel/core": "7.22.17",
        "@babel/eslint-parser": "7.18.9",
        "@babel/plugin-proposal-class-properties": "7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "7.18.9",
        "@babel/plugin-syntax-jsx": "7.22.5",
        "@babel/plugin-transform-typescript": "7.18.12",
        "@babel/preset-env": "7.18.10",
        "@babel/preset-react": "7.18.6",
        "@babel/preset-typescript": "7.18.6",
        "@headlessui/react": "1.7.18",
        "@heroicons/react": "2.1.3",
        "@molitio/system-schema": "workspace:*",
        "@rollup/plugin-babel": "6.0.4",
        "@rollup/plugin-commonjs": "25.0.5",
        "@rollup/plugin-image": "3.0.3",
        "@rollup/plugin-json": "6.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-replace": "5.0.3",
        "@rollup/plugin-terser": "0.4.4",
        "@rollup/plugin-typescript": "11.1.5",
        "@types/eslint": "^8",
        "@types/node": "18.11.9",
        "@types/react": "18.2.64",
        "@types/react-dom": "18.2.7",
        "autoprefixer": "10.4.19",
        "eslint": "8.57.0",
        "fast-glob": "3.3.2",
        "next": "14.1.3",
        "postcss": "8.4.36",
        "postcss-import": "16.1.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-is": "18.2.0",
        "rollup": "4.0.2",
        "rollup-plugin-peer-deps-external": "2.2.4",
        "rollup-plugin-pnp-resolve": "2.0.0",
        "rollup-plugin-postcss": "4.0.2",
        "rollup-plugin-size": "0.2.2",
        "rollup-plugin-visualizer": "5.12.0",
        "tailwindcss": "3.4.1",
        "tslib": "2.4.1",
        "typescript": "5.2.2"
    },
    "stableVersion": "1.0.2"
}
