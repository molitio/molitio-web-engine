{
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/.artifacts", "**/.yarn/cache", "molitio-wiki/**"],
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es6", "dom", "dom.iterable", "esnext", "es2020", "es2022"],
        "baseUrl": "./",
        "moduleResolution": "Node16",
        "target": "es2022",
        "module": "Node16",
        "paths": {
            "@molitio/*": ["./packages-ui/*", "./apps-ui/*", "./apps-api/*"]
        },
        "isolatedModules": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true
    }
}
