{
    "name": "@molitio/mwe-resource-hub-api",
    "version": "0.2.0",
    "description": "Resource Distribution Engine",
    "author": "Peter Koller",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:molitio/molitio-web-engine.git"
    },
    "bugs": {
        "url": "https://github.com/molitio/molitio-web-engine/issues"
    },
    "homepage": "https://github.com/molitio/molitio-web-engine#readme",
    "keywords": [
        "molitio",
        "mwe-ui-core"
    ],
    "scripts": {
        "nest:cli": "nest --",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "dev:debug": "ts-node src/main --debug --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@apollo/gateway": "2.11.3",
        "@apollo/server": "5.1.0",
        "@as-integrations/fastify": "3.1.0",
        "@nestjs/apollo": "13.2.1",
        "@nestjs/cli": "11.0.10",
        "@nestjs/common": "11.1.8",
        "@nestjs/core": "11.1.8",
        "@nestjs/graphql": "13.2.0",
        "@nestjs/mongoose": "11.0.3",
        "@nestjs/platform-fastify": "11.1.8",
        "@swc/cli": "0.7.8",
        "@swc/core": "1.14.0",
        "ajv": "8.17.1",
        "chokidar": "4.0.3",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.2",
        "fastify": "5.6.1",
        "graphql": "16.12.0",
        "mongoose": "8.19.2",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.2"
    },
    "devDependencies": {
        "@nestjs/testing": "11.1.8",
        "@types/ajv": "1.0.4",
        "@types/jest": "30.0.0",
        "@types/node": "24.9.2",
        "@types/supertest": "6.0.3",
        "@typescript-eslint/eslint-plugin": "8.46.2",
        "@typescript-eslint/parser": "8.46.2",
        "eslint": "9.39.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "jest": "30.2.0",
        "prettier": "3.6.2",
        "ts-jest": "29.4.5",
        "ts-loader": "9.5.4",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.9.3",
        "webpack": "5.102.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            ".+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../../artifacts/coverage",
        "testEnvironment": "node"
    }
}
