{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist"
    },

    "exclude": ["./dist"]
}
