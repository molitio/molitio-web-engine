{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2019",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@molitio/resource-hub-modules": ["../../packages-api/resource-hub-modules/*"]
        }
    },

    "exclude": ["./dist"]
}
